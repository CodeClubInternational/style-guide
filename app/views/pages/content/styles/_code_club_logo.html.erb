<div class="sg-panel">
	<h2>Standalone Logomark</h2>

	<div class="sg-example">
		<h3 class="sg-example__heading">Example</h3>

		<div class="sg-example__preview">
			<figure class="o-logo">
				<a href="#" class="o-logo__link">
					<%= image_tag "images/code-club-logo.svg", :alt => '', :class => 'o-logo__image' %>
				</a>
			</figure>
		</div>

		<code class="sg-example__code">
			&lt;figure class="o-logo"&gt;<br>
			&nbsp;&nbsp;&lt;a href="#" class="o-logo__link"&gt;<br>
			&nbsp;&nbsp;&nbsp;&nbsp;&lt;img alt="" class="o-logo__image" src="/images/code-club-logo.svg"&gt;<br>
			&nbsp;&nbsp;&lt;/a&gt;<br>
			&lt;/figure&gt;
		</code>
	</div>

	<hr>

	<h2>Logomark with Text</h2>

	<div class="sg-example">
		<h3 class="sg-example__heading">Example</h3>

		<div class="sg-example__preview">
			<figure class="o-logo">
				<a href="#" class="o-logo__link">
					<%= image_tag "images/code-club-logo.svg", :alt => '', :class => 'o-logo__image' %>
					<figcaption class="o-logo__appendix">United Kingdom</figcaption>
				</a>
			</figure>
		</div>

		<code class="sg-example__code">
			&lt;figure class="o-logo"&gt;<br>
			&nbsp;&nbsp;&lt;a href="#" class="o-logo__link"&gt;<br>
			&nbsp;&nbsp;&nbsp;&nbsp;img alt="" class="o-logo__image" src="/images/code-club-logo.svg"&gt;<br>
			&nbsp;&nbsp;&nbsp;&nbsp;&lt;figcaption class="o-logo__appendix"&gt;United Kingdom&lt;/figcaption&gt;<br>
			&nbsp;&nbsp;&lt;/a&gt;<br>
			&lt;/figure&gt;
		</code>
	</div>

	<h2>Logomark with Stacked Text</h2>

	<div class="sg-example">
		<h3 class="sg-example__heading">Example</h3>

		<div class="sg-example__preview">
			<figure class="o-logo o-logo--stacked">
				<a href="#" class="o-logo__link">
					<%= image_tag "images/code-club-logo.svg", :alt => '', :class => 'o-logo__image o-logo__image--stacked' %>
					<figcaption class="o-logo__appendix o-logo__appendix--stacked">United Kingdom</figcaption>
				</a>
			</figure>
		</div>

		<code class="sg-example__code">
			&lt;figure class="o-logo o-logo--stacked"&gt;<br>
			&nbsp;&nbsp;&lt;a href="#" class="o-logo__link"&gt;<br>
			&nbsp;&nbsp;&nbsp;&nbsp;img alt="" class="o-logo__image o-logo__image--stacked" src="/images/code-club-logo.svg"&gt;<br>
			&nbsp;&nbsp;&nbsp;&nbsp;&lt;figcaption class="o-logo__appendix o-logo__appendix--stacked"&gt;United Kingdom&lt;/figcaption&gt;<br>
			&nbsp;&nbsp;&lt;/a&gt;<br>
			&lt;/figure&gt;
		</code>
	</div>
</div>

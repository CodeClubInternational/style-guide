<%= section_header('Change margin') %>

<p>You can alter the margin these classes:</p>

<table class="c-strip-table">
  <thead class="c-strip-table__head">
    <tr class="c-strip-table__row">
      <th class="c-strip-table__col-heading">Class</th>
      <th class="c-strip-table__col-heading">Size</th>
    </tr>
  </thead>
  <tbody class="c-strip-table__body">
    <% get_margin_classes().each do |suffix, value|  %>
      <tr class="c-strip-table__row">
        <td class="c-strip-table__cell">
          <%  get_location_prefixes_for('margin').each do |prefix| %>
            <%= highlight_sass_example("#{prefix}#{suffix}") %><br/>
          <% end %>
        </td>
        <td class="c-strip-table__cell"><%= value.round %>px</td>
      </tr>
    <% end %>
  </tbody>
</table>

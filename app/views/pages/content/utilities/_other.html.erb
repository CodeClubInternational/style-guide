<%= section_header('Round corners') %>

<p>Add one of these classes to make corners round:</p>

<%= render_example do %>

<div class="c-grid">

<% extract_classes_from_file('_rounded-corners.scss').each do |class_name|  %>
  <div class="c-col c-col--1 u-background--green <%= class_name %>">&nbsp;</div>
<% end %>

</div>

<% end %>


<p id="notice"><%= notice %></p>

<h1>Listing Admin Sections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Path</th>
      <th>Order</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.path %></td>
        <td><%= section.order %></td>
        <td><%= link_to 'Edit', edit_admin_section_path(section) %></td>
        <td><%= link_to 'Destroy', admin_section_path(section), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_admin_section_path %>

<p id="notice"><%= notice %></p>

<h1>Listing Admin Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Path</th>
      <th>Order</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.path %></td>
        <td><%= page.order %></td>
        <td><%= page.section.title %></td>
        <td><%= link_to 'Show', page_path(page.section.path, page.path) %></td>
        <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
        <td><%= link_to 'Destroy', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


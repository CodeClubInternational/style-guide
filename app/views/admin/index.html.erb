
<p id="notice"><%= notice %></p>

<h1>Admin</h1>

<p>
  <%= link_to "New Section", new_admin_section_path %> |
  <%= link_to "New Page", new_admin_page_path %>
</p>

<ul>
  <% @sections.each do |section| %>
    <li>
      <%= link_to section.title, edit_admin_section_path(section) %>

      <% if section.pages.any? %>
        <ul>
          <% section.pages.each do |page| %>
            <li><%= link_to page.title, edit_admin_page_path(page) %></li>
          <% end %>
        </ul>
      <% end %>
    </li>
  <% end %>
</ul>
